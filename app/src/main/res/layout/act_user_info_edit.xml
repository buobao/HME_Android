<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="@dimen/base_margin_left"
                android:paddingRight="@dimen/base_margin_right">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:text="基本资料("
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/base_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/finished_num"
                        android:text="3"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/base_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textColor="@color/base_text_color"
                        android:textSize="@dimen/text_14" />
                    <TextView
                        android:id="@+id/total_num"
                        android:textSize="@dimen/text_14"
                        android:text="11"
                        android:textColor="@color/base_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/base_text_color"
                        android:textSize="@dimen/text_14"
                        android:text=")" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/base_btn_bg"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/text_10"
                    android:layout_alignParentRight="true"
                    android:text="资料完善35%" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/base_line_color"/>

            <RelativeLayout
                android:id="@+id/user_portrait_upload"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="@dimen/base_margin_left"
                android:paddingRight="@dimen/base_margin_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:layout_centerVertical="true"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/text_16" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_portrait"
                    android:layout_toLeftOf="@+id/right_ic"
                    android:layout_marginRight="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/default_portrait" />

                <ImageView
                    android:id="@+id/right_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_thin"
                android:background="@color/base_line_color" />
            <com.hme.turman.widgets.FormItemLayout
                android:id="@+id/menu_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="昵称"
                app:hasIcon="false" />
            <com.hme.turman.widgets.FormItemLayout
                android:id="@+id/menu_user_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="个人语音"
                app:hasIcon="false" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_huge"
                android:background="@color/base_line_color"/>
            <com.hme.turman.widgets.FormItemLayout
                android:id="@+id/menu_user_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="年龄层"
                app:hasIcon="false" />
            <com.hme.turman.widgets.FormItemLayout
                android:id="@+id/menu_user_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="职业"
                app:hasIcon="false" />
            <com.hme.turman.widgets.FormItemLayout
                android:id="@+id/menu_user_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="公司"
                app:hasIcon="false" />
            <com.hme.turman.widgets.FormItemLayout
                android:id="@+id/menu_user_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="个人签名"
                app:hasIcon="false" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_huge"
                android:background="@color/base_line_color"/>
            <com.hme.turman.widgets.FormItemLayout
                android:id="@+id/menu_user_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="性别"
                app:hasIcon="false" />
            <com.hme.turman.widgets.FormItemLayout
                android:id="@+id/menu_user_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="情感状态"
                app:hasIcon="false" />
            <com.hme.turman.widgets.FormItemLayout
                android:id="@+id/menu_user_hometown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="家乡"
                app:hasIcon="false" />
            <com.hme.turman.widgets.FormItemLayout
                android:id="@+id/menu_user_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="我的爱好"
                app:hasIcon="false" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>