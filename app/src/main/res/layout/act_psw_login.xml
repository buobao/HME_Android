<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/frg_title_layout"/>

        <LinearLayout
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_margin_left"
                android:layout_marginRight="@dimen/base_margin_right"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_42">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/deep_text_color"
                    android:textSize="@dimen/text_14"
                    android:text="手机号" />

                <EditText
                    android:id="@+id/input_phone"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:phoneNumber="true"
                    android:lines="1"
                    android:maxLength="15"
                    android:hint="请输入手机号"
                    android:textSize="@dimen/text_14"
                    android:background="@android:color/white" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_thin"
                android:background="@color/base_line_color"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_42"
                android:layout_marginLeft="@dimen/base_margin_left"
                android:layout_marginRight="@dimen/base_margin_right">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textColor="@color/deep_text_color"
                    android:textSize="@dimen/text_14"
                    android:maxLength="16"
                    android:text="密  码" />

                <EditText
                    android:id="@+id/input_psw"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:hint="6-16为数字，大小写字母"
                    android:numeric="signed"
                    android:lines="1"
                    android:password="true"
                    android:textSize="@dimen/text_14"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:id="@+id/show_psw"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="@dimen/base_margin_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_eye" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/login_button"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/base_margin_left"
            android:layout_marginRight="@dimen/base_margin_right"
            android:text="登    录"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_20"
            android:background="@drawable/button_bg"
            android:gravity="center" />

        <TextView
            android:id="@+id/code_login"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/app_color"
            android:text="手机号快捷登录" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_alert" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里显示协议和提示等" />

    </LinearLayout>

</RelativeLayout>