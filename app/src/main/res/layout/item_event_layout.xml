<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/base_margin_left"
            android:paddingRight="@dimen/base_margin_right"
            android:layout_height="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_head_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/default_portrait" />

            <TextView
                android:id="@+id/item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这里是标题"
                android:layout_marginLeft="5dp"
                android:lines="1"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_thin"
            android:background="@color/base_line_color" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="这里显示内容"
                android:id="@+id/textView" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_thin"
            android:background="@color/base_line_color" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_margin_left"
            android:paddingRight="@dimen/base_margin_right"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/item_location_tv"
                android:drawableLeft="@drawable/sel_ic_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="这里显示发布消息的地址"
                android:lines="1"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/text_12"
                />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>