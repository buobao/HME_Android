<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/base_margin_left"
            android:paddingRight="@dimen/base_margin_right"
            android:layout_height="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_head_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/default_portrait" />

            <TextView
                android:id="@+id/item_title_tv"
                android:layout_toRightOf="@+id/item_head_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题这里是标题"
                android:maxLength="20"
                android:layout_marginLeft="10dp"
                android:lines="1"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/sel_ic_clock"
                android:drawablePadding="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:textSize="@dimen/text_10"
                android:textColor="@color/base_text_color"
                android:text="2016-11-01" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_thin"
            android:background="@color/base_line_color" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:lines="3"
                android:textSize="@dimen/text_14"
                android:textColor="@color/base_text_color"
                android:text="求助！求助！厕所没纸了，谁来帮帮我！"
                android:id="@+id/textView" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_thin"
            android:background="@color/base_line_color" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/base_margin_left"
            android:paddingRight="@dimen/base_margin_right"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/item_location_tv"
                android:drawableLeft="@drawable/sel_ic_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="这里显示发布消息的地址"
                android:lines="1"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/text_12" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>